<!-- Modal para modificación de clase -->
<div
  class="modal fade"
  id="claseModificacionModal"
  tabindex="-1"
  aria-labelledby="claseModificacionModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Encabezado -->
      <div class="modal-header">
        <h5 class="modal-title mx-auto" id="claseModificacionModalLabel">
          Modificación de clase
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Cerrar"
        ></button>
      </div>

      <!-- Cuerpo con formulario -->
      <div class="modal-body">
        <form id="claseModificacionForm">
          <input type="hidden" id="modificacionClaseID" name="id">

          <div class="mb-3">
            <label for="fechaModificacionClaseInput" class="form-label">Fecha</label>
            <input
              type="date"
              class="form-control"
              id="fechaModificacionClaseInput"
              name="fecha"
              required
            >
          </div>

          <div class="mb-3">
            <label for="horaDesdeModificacionClaseInput" class="form-label">
              Hora desde
            </label>
            <input
              type="time"
              class="form-control"
              id="horaDesdeModificacionClaseInput"
              name="hora_desde"
              step="60"
              required
            >
          </div>

          <div class="mb-3">
            <label for="horaHastaModificacionClaseInput" class="form-label">
              Hora hasta
            </label>
            <input
              type="time"
              class="form-control"
              id="horaHastaModificacionClaseInput"
              name="hora_hasta"
              step="60"
              required
            >
          </div>

          <div class="mb-3">
            <label for="estudianteModificacionClaseSelect" class="form-label">
              Alumno
            </label>
            <select
              id="estudianteModificacionClaseSelect"
              name="estudiante_id"
              class="form-select"
              required
            >
              <% estudiantes.forEach(function(estudiante) { %>
                <option value="<%= estudiante.id %>">
                  <%= estudiante.nombre %> <%= estudiante.apellido %>
                </option>
              <% }) %>
            </select>
          </div>
        </form>
      </div>

      <!-- Pie de modal -->
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-danger"
          data-bs-dismiss="modal"
        >
          Cancelar
        </button>
        <button
          type="button"
          form="claseModificacionForm"
          class="btn btn-primary"
          onclick="modificarClase()"
        >
          Modificar clase
        </button>
      </div>
    </div>
  </div>
</div>
